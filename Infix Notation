import java.util.Scanner
class Loop {
    infix fun nextNumbers(input_value: Int): Int {
        for (values in 0..input_value) {
            println(values)
        }

        return 0
    }
}

fun main() {
    val user_input = Scanner(System.`in`)
    print("Enter the value: ")
    val input_value = user_input.nextInt()

    val class_object = Loop()
    val function_call = class_object nextNumbers input_value
}
